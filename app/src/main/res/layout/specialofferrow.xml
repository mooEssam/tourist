<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#CC40729E"
        android:layout_margin="15dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:id="@+id/contrynameinoffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
       android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="8dp"
        android:text="" />

    <ImageView
        android:id="@+id/contryimginoffer"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_below="@+id/contrynameinoffer"
        android:src="@drawable/ex" />

    <TextView
        android:id="@+id/bladname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contryimginoffer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#43287A"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/offernamesp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bladname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#452E75"
        android:textAlignment="center"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/oooo"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:drawingCacheQuality="auto"
        android:isIndicator="true"
        android:numStars="5"

        android:progressTint="#E6C531"
        android:stepSize="1" />

    <Button
        android:id="@+id/more"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#423460"
        android:text="More"
        android:textSize="25sp" />



    <TextView
        android:layout_marginTop="22dp"
        android:id="@+id/offertimesp"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/oooo"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:text="5"
        android:layout_below="@+id/offernamesp"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/oooo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offernamesp"
            android:layout_marginTop="22dp"
            android:text="TimeWithDays"
            android:layout_centerInParent="true"
            android:textSize="20sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>