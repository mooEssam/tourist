<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/company_iv_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ConpanyDetail">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/c_logo_detail"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/an" />

    <TextView
        android:id="@+id/c_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/c_desc_detail"
        android:layout_width="435dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textDirection="rtl"
        android:textSize="18sp" />
        <TextView
            android:id="@+id/offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Offers"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/c_desc_detail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#3A5018"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ofersrecycler"
            android:layout_below="@id/offers"
            />
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/exclusev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluseve Offers"
            android:textSize="25sp"
            android:layout_below="@+id/ofersrecycler"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_below="@+id/exclusev"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</ScrollView>


</LinearLayout>